<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/logo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo_ic" />

    <TextView
        android:id="@+id/signin_tv"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_iv"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/menu_top"
        android:text="@string/sign_in"
        android:textColor="@color/second_white" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/signin_tv"
        android:gravity="center_vertical"
        android:padding="@dimen/menu_top">

        <EditText
            android:id="@+id/email_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sign_up_form"
            android:background="@mipmap/bg_et"
            android:gravity="center"
            android:hint="@string/sign_up_email"
            android:inputType="textEmailAddress"
            android:textColor="@color/second_white" />


        <EditText
            android:id="@+id/password_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_et"
            android:layout_margin="@dimen/sign_up_form"
            android:background="@mipmap/bg_et"
            android:gravity="center"
            android:hint="@string/sign_up_password"
            android:inputType="textPassword|number"
            android:textColor="@color/second_white" />
    </RelativeLayout>

</RelativeLayout>