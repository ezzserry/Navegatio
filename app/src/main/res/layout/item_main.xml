<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/menu_top"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/menu_top">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/news_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/news_image"
                android:scaleType="center"
                android:src="@mipmap/bg_image_item" />

            <TextView
                android:id="@+id/title_tv"
                style="@android:style/TextAppearance.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/news_iv"
                android:gravity="start"
                android:padding="@dimen/menu_top"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/subtitle_tv"
                style="@android:style/TextAppearance.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_tv"
                android:gravity="center"
                android:maxLines="4"
                android:padding="@dimen/menu_top"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>